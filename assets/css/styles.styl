html,body
	height:100%;


body
	margin:0;
	padding:0;
	background-color: #fff;
	font-family: Arial, Helvetica, Sans-serif;
	
	-webkit-touch-callout:none;
	-webkit-text-size-adjust: none;
	-webkit-font-smoothing: antialiased;

#header
	top:0;
	left:0;
	right:0;
	z-index: 3;
	height: 60px;
	display: block;
	position: fixed;
	background-color: #353843;
	
	ul#main-area
		margin:0;
		padding:0;
		z-index: 2;
		height:60px;
		width: 300px;
		display: block;
		position: relative;
		background-color: #9ac355;

		li
			list-style: none;
			position: absolute;
			
	#sam-media-logo
		left:0;
		top:5px;
		right:0;
		padding:0;
		width:100px;
		height:50px;
		margin:0 auto;
		display: block;
	
		a
			width:100px;
			height:50px;
			display: block;
			background-size: 100% auto;
			background-image:url('../img/sam-media-logo.png');
	
	#bar
		top:0;
		right:0;
		width:10px;
		height:60px;
		display: block;
		position:absolute; 
		background-color: #9ac355;
		
	#tabs-area
		top:26px;
		left:310px;
		z-index: 1;
		position: absolute;
		
		a
			margin:0;
			color: #999dac;
			font-size: 14px;
			cursor: pointer;
			padding: 9px 15px;
			font-weight: bold;
			text-decoration: none;
			display: inline-block;
			background-color: #3e424f;
			border-radius: 6px 6px 0px 0px;
		
			&:hover, 
			&.active
				color: #fff;
				background-color: #9ac355;
					
	#filter-menu,
    #tabs-menu
		margin:0;
		padding:0;
		width:60px;
		height:60px;
		cursor: pointer;
			
	#filter-menu
		top:0;
		left:0;
		display: block;
		
		&:hover,
		&.active
			background-color: #8cb547;
				
		span
			width:60px;
			height:60px;
			display: block;
			background-size: 15px auto;
			background-repeat: no-repeat;
			background-position: center center;
			background-image: url('../img/arrow-menu.png');
			
			-webkit-transform: rotate(0deg);
			-webkit-transition: 0.4s ease-in-out;
			
		&.active 
			span
				-webkit-transform: rotate(-180deg);
	
	#tabs-menu
		top:0;
		right:0;
		display: none;
		
		&:hover,
		&.active
			background-color: #8cb547;
		
		span
			width:60px;
			height:60px;
			display: block;
			background-size: 30px auto;
			background-repeat: no-repeat;
			background-position: center center;
			background-image: url('../img/burger-menu.png');	

#sidebar
	top:0;
	left:0;
	bottom:0;
	z-index: 2;
	width:300px;
	overflow: auto;
	display: block;	
	min-height:100%;
	position: fixed;
	background-color: #353843;
	-webkit-transition: 0.4s ease-in-out;
	-webkit-transform: translateX(-300px);
	-webkit-backface-visibility: hidden;
	backface-visibility: hidden;

	&.visible
		-webkit-transform: translateX(0px);


#filters
	width:280px;
	height: 2000px;
	display: block;
	margin:90px auto 20px auto;
	background-color: transparent;


	h2 
		padding: 0;
		margin: 15px 0;
		color: #a8adc1;
		font-size: 16px;


	label
		width: 70px;
		color: #868a98;
		font-size: 12px;
		user-select: none;
		font-weight: bold;
		display: inline-block;


	input[type="text"], 
	input[type="date"],
	input[type="datetime-local"], 
	input[type="number"]
		width: 180px;
		border: none;
		margin-top: 5px;
		padding: 5px 10px;
		border-radius: 3px;
		outline-color: #8cc63e;
		font-family: Arial, Helvetica, Sans-serif;


	select
		width: 200px;
		height: 23px;
		border: none;
		margin-top: 5px;
		padding: 5px 10px;
		outline-color: #8cc63e;
		background-color: #fff;
		background-size: 8px 11px;
		background-repeat: no-repeat;
		background-position: 96% center;
		background-image: url('../img/arrow.png');
		
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
	
	hr
		border: none;
		border-bottom: 1px solid #868a98;

	button
		float: right;
		width: 100px;
		border: none;
		color: #fff;
		cursor: pointer;
		margin-top: 20px;
		padding: 6px 10px;
		font-weight: bold;
		border-radius: 3px;
		margin-right: 15px;
		outline-color: #8cc63e;
		background-color: #9ac355;
	

		&:hover
			background-color: #8cb547;

#container
	width: auto;
	height: auto;
	display: block;
	overflow:auto;
	margin:70px 10px 10px 10px;
	-webkit-transition: 0.4s ease-in-out;
	
	&.default
		margin-left: 310px;

table
	width: 100%;
	border-collapse: collapse;

tr:hover
	background-color:#ebffcf;

th
	font-weight:600;
	background-color: #f0f0f0;


th,td 
	padding: 8px;
	text-align: left;
	border-bottom: 1px solid #ddd;

	
@media only screen and (max-width : 768px) 
	
	#header  
	
		ul#main-area
			width:100%;
			
		#tabs-menu
			display:block;
		
	
		#tabs-area
			left:0;
			right:0;
			top:-264px;
			display: block;
			-webkit-transition: 0.5s ease-in-out;

			&.show
				top:60px;
	
	
		#tabs-area 
			a	
				margin: 0px;
				display: block;
				border-radius: 0px;
				background-color: #353843;
	
				&:hover,
				&.active
					background-color:#8aaf4b;

	#container
	
		&.default
			margin-left: 0px;
	
	

